{
  "manifest_version": 2,
  "name": "Firefox Privacy Configuration",
  "version": "1.0.0",
  "description": "Configure Firefox privacy, security, and performance settings with ease",
  "permissions": [
    "storage",
    "downloads",
    "nativeMessaging",
    "<all_urls>"
  ],
  "browser_action": {
    "default_title": "Firefox Privacy Config",
    "default_icon": {
      "48": "assets/icon-48.png",
      "96": "assets/icon-96.png"
    }
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "icons": {
    "48": "assets/icon-48.png",
    "96": "assets/icon-96.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "firefox-configurator@example.com",
      "strict_min_version": "57.0"
    }
  }
}